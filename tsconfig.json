{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsxFactory": "Taro.createElement",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "build",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "build",
    "dist",
    "scripts",
    "node_modules"
  ]
}
